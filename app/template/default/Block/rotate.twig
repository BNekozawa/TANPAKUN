<script>
    $(function () {
        /*
        TAB control
        */
        $('.goods_tab label').each(function () {
            var $this = $(this);
            $this.on('click', function () {
                $('.slide').removeClass('active');
                $('.goods_tab label').removeClass('color');
                $(this).addClass('color');
                if ($this.hasClass('sausage')) {
                    $('.slide1').addClass('active');
                } else if ($this.hasClass('hamburger')) {
                    $('.slide2').addClass('active');
                }
            });
        });

        $('.nav_item').each(function () {
            var $this = $(this);
            $this.on('click', function () {
                $(".nav_item").removeClass('active');
                $this.addClass('active');
                $('.tab').removeClass('active');
                if ($this.hasClass('nav_item1')) {
                    $('#tab1').addClass('active');
                } else if ($this.hasClass('nav_item2')) {
                    $('#tab2').addClass('active');
                }
            });
        });

        var isVisible = false;

        function scroll() {
            var height = $(window).scrollTop();
            if (height >= 3300) {
                $("#tab1").addClass('active');
                isVisible = true;
            }
        }
        $(window).on('scroll', function () {
            if (isVisible == false) {
                scroll();
            }
        });
    });
</script>